<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationViewTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">11sp</item> <!-- Adjust the text size here -->
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="EditFieldOneLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <!-- Update your existing SignInButtonStyle to inherit from ButtonWithStroke -->
    <style name="SignInButtonStyle" parent="ButtonWithStroke">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="ButtonWithStroke" parent="Widget.Material3.Button">
        <item name="strokeColor">#000000</item>
        <item name="strokeWidth">1dp</item>
    </style>


    <style name="AdminBadgeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/rectangle2</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:padding">8dp</item>
        <item name="android:text">Admin</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="EmployeeBadgeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/rectangle2</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:padding">8dp</item>
        <item name="android:text">Admin</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>